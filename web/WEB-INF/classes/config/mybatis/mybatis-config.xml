<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.bit.spring.model.UserDTO" alias="userDTO"/>
        <typeAlias type="com.bit.spring.model.BoardDTO" alias="boardDTO"/>
    </typeAliases>
    <mappers>
        <mapper resource="config/mybatis/mapper/UserMapper.xml"/>
        <mapper resource="config/mybatis/mapper/BoardMapper.xml"/>
    </mappers>
</configuration>